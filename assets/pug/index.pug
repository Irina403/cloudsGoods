				.widget-img
					img(src="i/img-banner-2.png", alt="")
				.main__col-right 
					.widget
						.widget__title Создать виджет
						.widget__form
							input(type="checkbox")
							label Рассчитать прогнозируемую выгоду
							p Укажите количество посетителей сайта за месяц
							input.widget__input-style(type="text")
							p Сайт компании
							input.widget__input-style(type="text" placeholder="Правильный текст")
							p Сфера бизнеса
							input.widget__input-style(type="text" placeholder="Правильный текст")
							input.widget__loading-logo(type="file" name="file" multiple)

							.widget__footer 
								.widget__footer-block 
									p Соберем контакты
									.widget__footer-price 200 шт.
								.widget__footer-block 
									p Поможем совершить
									.widget__footer-price 20 продаж
								.widget__footer-block 
									p Стоимость тарифа
									.widget__footer-price 8 000 руб. 
